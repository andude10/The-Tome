@model TheTome.ViewModels.LoginModel

<h2 class="text-center mt-3">Welcome to TheTome! Enter your existing username and password or register</h2>

<a asp-action="Register" asp-controller="Account">Registration</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email" class="form-label mt-4">Enter Email</label>
            <input type="text" asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email"/>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="form-label mt-4">Enter password</label>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password"/>
        </div>
        <div class="form-group mt-3">
            <input type="submit" value="Submit" class="btn btn-primary"/>
        </div>
    </div>
</form>