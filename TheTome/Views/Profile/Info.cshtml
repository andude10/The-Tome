@using System.Diagnostics
@using TheTome.ViewModels
@model User
@{
    ViewData["Title"] = $"{Model.Name}'s profile";

    Debug.Assert(Model != null, nameof(Model) + " != null");

    var userPhoto = Model.Photo?.ToString() ?? "https://lun-eu.icons8.com/a/vc5_tdnfq0CP24l39ZX83A/ZhzxdnO4l0K6FIsUH1ZIyA/%D1%80%D0%B0%D0%B7%D0%BC%D1%8B%D1%88%D0%BB%D1%8F%D1%8F.png";
}

<div class="pt-3 row">
    <div class="text-center p-3 m-3">
        <img class="center-img img-fluid round-img" src="@userPhoto" alt="Photo" style="height: 400px; width: 400px; border: 1px solid rgba(0, 0, 0, 0.125); border-radius: 0.25rem"/>
        <h1 class="card-text pt-2">@Model.Name</h1>
        <p>@Model.AboutUser text test text test text test text test text test text test text test text test text test</p>
    </div>
    <div class="text-center m-3">
        @await Html.PartialAsync("_Posts", new PostsViewModel(Model.Posts.Take(3)))
    </div>
</div>