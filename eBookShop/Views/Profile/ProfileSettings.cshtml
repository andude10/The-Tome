@model User

<div class="list-group-horizontal">
    <div class="d-grid">
        <label>Username</label>
        <label>Email</label>
    </div>

    <div class="d-grid" role="grid">
        <body>
            <label style="width: 30%">@Model.Name</label>
            <label style="width: 50%">@Model.Email</label>
            <div class="w-75 btn-group" role="group">
                <a asp-controller="Profile" asp-action="ShowOrders" asp-route-id="@Model"
					   class="btn btn-primary mx-2"> Show orders</a>
            </div>
        </body>
    </div>
</div>