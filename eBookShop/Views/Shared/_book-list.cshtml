@model IEnumerable<Book>

@{
    Layout = null;
}

<div class="row" id="book-list">
    @foreach (var obj in Model)
    {
        <div class="col-sm-6 text-center" style="width: 300px;">
            <div class="mt-3 book-presentation">
                <div class="card-header">
                    <a asp-controller="Explore" asp-action="BookViewer" asp-route-bookId="@obj.Id">
                         <h5>@obj.Title</h5>
                    </a>
                    <p class="lead">@obj.Author</p>
                </div>
                <div class="card-body " style="height: 350px;">
                    <img class="img-fluid center-img" src="@obj.CoverUrl" alt="Cover" style="height: 280px; width: auto"/>
                    <h4 class="p-2 ">@obj.Price$</h4>
                </div>
            </div>
        </div>
    }
</div>